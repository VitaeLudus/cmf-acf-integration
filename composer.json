{
    "name": "custom-media-folders/acf-integration",
    "description": "ACF Pro integration for Custom Media Folders - automatically organize ACF uploads into specified folders",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "CMF\\ACF\\": "src/"
        },
        "files": [
            "cmf-acf-integration.php"
        ]
    },
    "extra": {
        "installer-paths": {
            "../../mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "../../plugins/{$name}/": ["type:wordpress-plugin"],
            "../../themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf"
    }
}
